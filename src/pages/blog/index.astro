---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 1100px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 2em 1em;
			}

			.blog-header {
				text-align: center;
				margin-bottom: 3em;
				padding-bottom: 2em;
				border-bottom: 2px solid rgb(var(--border-color));
			}

			.blog-header h1 {
				font-size: clamp(2em, 5vw, 3em);
				color: var(--accent);
				margin-bottom: 0.5em;
			}

			.blog-header p {
				color: rgb(var(--gray));
				font-size: clamp(1em, 2vw, 1.2em);
			}

			.posts-grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(min(100%, 340px), 1fr));
				gap: 2em;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}

			.post-card {
				background: linear-gradient(135deg, rgb(var(--bg-secondary)) 0%, rgb(var(--bg-tertiary)) 100%);
				border: 1px solid rgb(var(--border-color));
				border-radius: 8px;
				overflow: hidden;
				transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
				height: 100%;
				display: flex;
				flex-direction: column;
			}

			.post-card:hover {
				transform: translateY(-6px);
				border-color: var(--accent);
				box-shadow: 0 12px 30px rgba(0, 0, 0, 0.4), 0 0 0 1px var(--accent);
			}

			.post-card a {
				text-decoration: none;
				display: flex;
				flex-direction: column;
				height: 100%;
			}

			.post-image {
				width: 100%;
				height: 200px;
				object-fit: cover;
				background: rgb(var(--bg-tertiary));
				border-bottom: 2px solid rgb(var(--border-color));
			}

			.post-content {
				padding: 1.5em;
				flex-grow: 1;
				display: flex;
				flex-direction: column;
			}

			.post-title {
				margin: 0 0 0.75em 0;
				color: rgb(var(--black));
				font-size: clamp(1.2em, 2vw, 1.4em);
				line-height: 1.3;
				font-weight: 700;
			}

			.post-card:hover .post-title {
				color: var(--accent);
			}

			.post-description {
				color: rgb(var(--gray));
				font-size: clamp(0.9em, 1.5vw, 0.95em);
				line-height: 1.5;
				margin-bottom: 1em;
				flex-grow: 1;
			}

			.post-meta {
				display: flex;
				justify-content: space-between;
				align-items: center;
				margin-top: auto;
				padding-top: 1em;
				border-top: 1px solid rgba(var(--border-color), 0.5);
			}

			.post-date {
				color: rgb(var(--gray));
				font-size: 0.9em;
				font-family: 'Courier New', monospace;
			}

			.read-more {
				color: var(--accent);
				font-size: 0.9em;
				font-weight: 600;
				display: flex;
				align-items: center;
				gap: 0.3em;
			}

			.read-more::after {
				content: 'â†’';
				transition: transform 0.2s ease;
			}

			.post-card:hover .read-more::after {
				transform: translateX(4px);
			}

			.no-posts {
				text-align: center;
				padding: 4em 2em;
				color: rgb(var(--gray));
			}

			@media (max-width: 768px) {
				main {
					padding: 1em;
				}

				.blog-header {
					margin-bottom: 2em;
					padding-bottom: 1.5em;
				}

				.posts-grid {
					gap: 1.5em;
				}

				.post-image {
					height: 180px;
				}

				.post-content {
					padding: 1.25em;
				}
			}

			@media (min-width: 1200px) {
				.posts-grid {
					grid-template-columns: repeat(3, 1fr);
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="blog-header">
				<h1>Technical Articles</h1>
				<p>Kubernetes administration, cloud infrastructure, security research, and platform engineering</p>
			</div>

			<section>
				{posts.length > 0 ? (
					<ul class="posts-grid">
						{posts.map((post) => (
							<li class="post-card">
								<a href={`/blog/${post.id}/`}>
									<div class="post-content">
										<h2 class="post-title">{post.data.title}</h2>
										{post.data.description && (
											<p class="post-description">{post.data.description}</p>
										)}
										<div class="post-meta">
											<span class="post-date">
												<FormattedDate date={post.data.pubDate} />
											</span>
											<span class="read-more">Read</span>
										</div>
									</div>
								</a>
							</li>
						))}
					</ul>
				) : (
					<div class="no-posts">
						<p>No posts yet. Check back soon for security research and technical analysis.</p>
					</div>
				)}
			</section>
		</main>
		<Footer />
	</body>
</html>
